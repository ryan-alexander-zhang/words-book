generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Word {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
}

model Phrase {
  id        Int      @id @default(autoincrement())
  content   String   @unique
  createdAt DateTime @default(now())
}

model Sentence {
  id        Int      @id @default(autoincrement())
  content   String   @unique
  createdAt DateTime @default(now())
}
